<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <div class="card form-card">
      <div class="card-header">
        <h3>Realizar pergunta</h3>
      </div>
      <div class="card-body">
        <form class="create" method="post" action="/salvarPergunta">
          <label> Título </label>
          <input type="text" name="titulo" class="form-control" placeholder="Título" />
          <label> Descrição </label>
          <textarea
            placeholder="Descreva sua pergunta"
            class="form-control"
            cols="30"
            rows="5"
            name="descricao"
          ></textarea>
          <button class="btn btn-primary perguntar">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
