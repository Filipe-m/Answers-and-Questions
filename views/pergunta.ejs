<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container pergunta-hero">
    <div class="jumbotron">
      <h1 class="display-4"><%= pergunta.titulo %></h1>
      <p class="lead"><%= pergunta.descricao %></p>
    </div>
    <form method="post" action="/responder" class="pergunta-form">
      <h3>Responda:</h3>
      <textarea
        placeholder="Digite sua resposta"
        class="form-control"
        name="corpo"
      ></textarea>
      <input type="hidden" name="pergunta" value=" <%= pergunta.id %> " />
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>

    <div class="respostas">
      <h3>Respostas:</h3>
      <% respostas.forEach(resposta => { %>
      <div class="card respostas-card">
        <div class="card-body respostas-body">
          <p class="respostas-corpo"><%= resposta.corpo %></p>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>
<%- include('partials/footer.ejs') %>
